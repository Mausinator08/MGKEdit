{
  "name": "mgkedit",
  "version": "1.0.0",
  "description": "Game editor using MGKFrameworkJS.",
  "main": "./app/MGKEdit/src/main.js",
  "scripts": {
    "post-install": "electron-builder install-app-deps",
    "dist-win": "electron-builder -p never --win",
    "pack": "electron-builder build --dir",
    "pre-install": "nvm install 14.7.0 && nvm use 14.7.0 && npm install yarn -g && yarn install",
    "build": "tsc --build --verbose & XCOPY \".\\index.html\" \".\\app\\MGKEdit\\\" /Y",
    "dry-build": "tsc --build --dry --verbose",
    "clean": "tsc --build --clean & del \".\\app\\MGKEdit\\index.html\"",
    "dry-clean": "tsc --build --clean --dry",
    "rebuild": "tsc --build --clean & del \".\\app\\MGKEdit\\index.html\" & tsc --build --verbose & XCOPY \".\\index.html\" \".\\app\\MGKEdit\\\" /Y",
    "watch": "tsc --build --watch --verbose & XCOPY \".\\index.html\" \".\\app\\MGKEdit\\\" /Y",
    "start": "electron ./app/MGKEdit/src/main.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "trace": "tsc --traceResolution"
  },
  "repository": "https://mausinator08.visualstudio.com/MausinatorGamesKitJS/_git/MGKEdit",
  "author": "John Patrick Maus",
  "license": "SEE LICENSE IN LICENSE.txt",
  "private": false,
  "build": {
    "appId": "com.frovanempire.mgkedit",
    "productName": "MGK Edit",
    "copyright": "Copyright Â© 2020 Frovan Empire, all rights reserved.",
    "win": {
      "target": [
        {
          "arch": [
            "x64",
            "ia32"
          ],
          "target": "nsis"
        }
      ],
      "publisherName": "Frovan Empire",
      "publish": "github"
    },
    "linux": {
      "target": [
        {
          "arch": [
            "x64",
            "ia32"
          ],
          "target": [
            "AppImage",
            "tar.gz"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "arch": [
            "x64",
            "ia32"
          ],
          "target": "zip"
        }
      ],
      "publish": "github"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "icon": "./build/icon.icns"
    }
  },
  "dependencies": {
    "babylonjs": "^4.1.0",
    "multi-ini": "^2.1.0"
  },
  "devDependencies": {
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
