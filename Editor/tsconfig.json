{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2022",
      "dom"
    ],
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "outDir": "./app",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "node_modules/*",
        "../Framework/*"
      ]
    },
    "rootDir": "../",
    "sourceRoot": "../"
  },
  "include": [
    "../Editor/**/*",
    "../Framework/**/*"
  ],
  "types": [
    "babylonjs"
  ]
}
