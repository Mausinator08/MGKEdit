{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug MGKEdit",
            "configurations": [
                "Debug main process",
                "Debug renderer process",
            ],
            "preLaunchTask": "build"
        }
    ],
    "configurations": [
        {
            "name": "Debug main process",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/app/src/Editor/main.js",
            "stopOnEntry": false,
            "args": [
                "${workspaceFolder}/src/Editor/**/*.ts",
                "${workspaceFolder}/src/Framework/**/*.ts"
            ],
            "runtimeArgs": [
                "--enable-logging",
                "--remote-debugging-port=9222",
                "--inspect=5858"
            ],
            "cwd": "${workspaceFolder}/app/src/",
            "protocol": "inspector",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/app/**/*.js"
            ],
            "smartStep": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*",
                "<node_internals>/**/*"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
                "runtimeArgs": [
                    "--enable-logging",
                    "--remote-debugging-port=9222",
                    "--inspect=5858"
                ]
            }
        },
        {
            "name": "Debug renderer process",
            "type": "chrome",
            "request": "attach",
            "pathMapping": {
                "${workspaceFolder}/app/src/Editor/**/*.js": "${workspaceFolder}/src/Editor/**/*.ts",
                "${workspaceFolder}/app/src/Framework/**/*.js": "${workspaceFolder}/src/Framework/**/*.ts"
            },
            "outFiles": [
                "${workspaceFolder}/app/**/*.js"
            ],
            "port": 9222,
            "url": "file:///${workspaceFolder}/app/src/Editor/content/index.html",
            "sourceMaps": true,
            "smartStep": true,
            "webRoot": "${workspaceFolder}/app",
            "internalConsoleOptions": "openOnSessionStart",
            "timeout": 10000,
            "targetTypes": [
                "page", 
                "webview"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*",
                "<node_internals>/**/*"
            ]
        }
    ]
}
